<header>
  <div class="header-content">
    <div class="header-logo">
      <%= link_to image_tag("biz/burpple_logo.png", :alt => "burpple"), deals_path %>
    </div>
    <div class="header-content-item logoutBtn">
      <% if merchant_signed_in? %>
          <!-- <strong><%= current_merchant.email %></strong> -->
          <%= link_to 'Edit profile', edit_merchant_registration_path, class: "btn btn-lg btn-info" %>
          <%= link_to "Logout", destroy_merchant_session_path,class: "btn btn-lg btn-info", method: :delete %>
          <strong><%=link_to current_merchant.email, merchant_path(id: current_merchant.id),class: "btn btn-lg btn-info" %></strong>
      <% else %>
          <%= link_to "Claim your business for free", new_merchant_registration_path ,class: "btn btn-lg btn-info" %>
          <%= link_to "Log in", new_merchant_session_path, class: "btn btn-lg btn-info"%>
      <% end %>
    </div>
  </div>
</header>

<div class="devices">
  <div class="container">
    <div class="fullWidth">
      <div class="devices-img">
        <%= image_tag "biz/marketing/hero_devices.png" %>
      </div>
    </div>
  </div>
</div>
<div class="features">
  <div class="container">
    <div class="oneThird">
      <div class="features-feature">
        <div class="features-feature-img">
          <%= image_tag "biz/marketing/icon-stats.png" %>
        </div>
        <h3>Track your performance</h3>
        <p>Weekly analytics reveal potential customers, and how your business is ranking.</p>
      </div>
    </div>
    <div class="oneThird">
      <div class="features-feature">
        <div class="features-feature-img">
          <%= image_tag "biz/marketing/icon-crown.png" %>
        </div>
        <h3>Keep customers updated</h3>
        <p>Easily input key business information customers need, and ensure your page is always updated.</p>
      </div>
    </div>
    <div class="oneThird">
      <div class="features-feature">
        <div class="features-feature-img">
          <%= image_tag "biz/marketing/icon-deal.png" %>
        </div>
        <h3>List exciting deals</h3>
        <p>Get more customers excited about your place by simply listing a deal on your page. It's free!</p>
      </div>
    </div>
  </div>
</div>
