<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Feedbacks History (Past Submitted Feedbacks)</h4>
  </div>
  <div class="panel-body" style="padding-bottom:0px">
    <table class="table table-bordered table-hover table-responsive">
      <tr>
        <th>Title</th>
        <th>Category</th>
        <th>Date and Time of Submitted Feedback</th>
        <th colspan="3"></th>
      </tr>
      <% @feedbacks.each do |feedback| %>
          <tr>
            <td><%= feedback.title %></td>
            <td><%= feedback.category %></td>
            <td><%= feedback.created_at.to_formatted_s(:long) %></td>

            <td><%= link_to 'View', feedback_path(feedback), class:"btn btn-xs btn-default" %></td>
            <!--<td><%= link_to 'Edit', edit_feedback_path(feedback) %></td>-->
            <!--<td><%= link_to 'Delete Request', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
          </tr>
      <% end %>
    </table>
  </div>
</div>