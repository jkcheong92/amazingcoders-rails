<p>
  <strong>Title:</strong>
  <%= @deal.title %>
</p>

<p>
  <strong>Redeemable:</strong>
  <%= @deal.redeemable.inspect %>
</p>

<p>
  <strong>Multiple Use:</strong>
  <%= @deal.multiple_use %>
</p>

<p>
  <strong>Image:</strong>
  <%= @deal.image %>
</p>

<p>
  <strong>Type of Deal:</strong>
  <%= @deal.type_of_deal %>
</p>

<p>
  <strong>Description:</strong>
  <%= @deal.description %>
</p>

<p>
  <strong>Start Date:</strong>
  <%= @deal.start_date %>
</p>

<p>
  <strong>Expiry Date:</strong>
  <%= @deal.expiry_date %>
</p>

<% for deal_day in @deal.deal_days%>
    <strong> Days:</strong>
    <% if deal_day.mon %>
        Mon
    <% end %>
    <% if deal_day.tue && deal_day.mon %>
        , Tue
    <% elsif deal_day.tue %>
        Tue
    <%end %>
    <% if deal_day.wed && (deal_day.tue || deal_day.mon) %>
        , Wed
    <% elsif deal_day.wed %>
        Wed
    <%end %>
    <% if deal_day.thur && (deal_day.wed || deal_day.tue || deal_day.mon) %>
        , Thur
    <% elsif deal_day.thur %>
        Thur
    <%end %>
    <% if deal_day.fri && (deal_day.thur || deal_day.wed || deal_day.tue || deal_day.mon) %>
        , Thur
    <% elsif deal_day.fri %>
        Fri
    <%end %>
    <% if deal_day.sat && (deal_day.fri || deal_day.thur || deal_day.wed || deal_day.tue || deal_day.mon) %>
        , Sat
    <% elsif deal_day.sat %>
        Sat
    <%end %>
    <% if deal_day.sun && (deal_day.sat || deal_day.fri || deal_day.thur || deal_day.wed || deal_day.tue || deal_day.mon) %>
        , Sun
    <% elsif deal_day.sun %>
        Sun
    <%end %>
    <br>
    <strong> Time period:</strong><br>
    <% for deal_time in deal_day.deal_times%>
        <%=h deal_time.started_at %>
        to
        <%=h deal_time.ended_at %><br>
    <% end %>
<% end %>

<p>
  <strong>Venue:</strong>
  <% @deal.venues.each do |venue| %>
      <span><%= venue.neighbourhood %></span>
  <% end %>
</p>

<p>
  <strong>Terms and Condition:</strong>
  <%= @deal.t_c %>
</p>

<p>
  <strong>Number of Redeems:</strong>
  <%= @deal.num_of_redeems %>
</p>

<p>
  <strong>Pushed:</strong>
  <%= @deal.pushed %>
</p>